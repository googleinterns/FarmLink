{
    "hosting": {
      "public": "view/build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
            "source": "/user-login",
            "destination": "/index.html"
          },
          {
            "source": "/user-signup",
            "destination": "/index.html"
          },
          {
            "source": "/",
            "destination": "/index.html"
          },
        {
          "source": "**",
          "function": "api"
        }
      ]
    }
  }